@model IEnumerable<QuizQpplicationMVC.Models.Question>

@{
    ViewBag.Title = "QuestionOfQuizz";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUESTION LIBRARY of "@TempData["quizz_name"]"</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <p>
            @Html.ActionLink("Create New Question", "CreateQuestion")<br />
            @Html.ActionLink("Back", "Index") 
        </p>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            &nbsp;&nbsp;&nbsp;<input type="search" name="search" placeholder="seach..." />
            &nbsp;&nbsp;&nbsp;<button>Try it or Reset</button>
        </div>

    </div>
}

<table class="table">
    <tr>
        <th>
            Question
        </th>
        <th>
            Detail
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewData["list"] as List<QuizQpplicationMVC.Models.Question>)
    {
        <tr>
            <td>
                @item.QuestionText
            </td>
            <td><a class="btn btn-warning btn-sm" href="@Url.Action("EditQuestion", new { id=item.QuestionID })">View detail</a></td>
            <td><a class="btn btn-danger btn-sm" href="@Url.Action("DeleteQuestion", new { id=item.QuestionID })">Delete</a></td>
        </tr>
    }

</table>
