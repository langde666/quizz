@model QuizQpplicationMVC.Models.UserRegister

@{
    ViewBag.Title = "UserRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            Welcome to |QUIZZ|, a website where you can study with |quizzs| in a variety of fields, or a place to relax with fun, interesting |quizzs|.<br />
            For convenience, read some of our tutorials first.
        </div>
    </div>
    <h3>Sign Up easily with just your name!</h3>
    <ul>
        <li>Enter your name</li>
        <li>Select a file(".png", ".jpg", ".gif") to set your avatar or Don't care =))</li>
        <li>Register Now!</li>
    </ul>
</div>

@if (ViewBag.msg0 != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong>
    </div>
}
else if (ViewBag.msg1 != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong>@ViewBag.msg1
    </div>
}
else if (ViewBag.msg2 != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong>@ViewBag.msg2
    </div>
}

<hr />
<div class="panel panel-default" style="width: 37%; margin: 5% 32%;">
    <div class="panel-heading">Sign Up to be User ^_^</div>
    <div class="panel-body">
        @using (@Html.BeginForm("UserRegister", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="">
                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Full Name ...", @style = "width:100%; margin-left: 56px;" } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="width:100%; margin-left: 56px;">
                        <input type="file" value="Avatar" class="form-control" id="img" name="img" />
                        <label for="img" style="margin-left: 96px; color:aqua">(not required)</label>
                    </div>
                </div>

                <div class="">
                    <button type="submit" id="Enter" class="btn btn-info btn-lg" style="width:100%;"><span class="glyphicon glyphicon-pencil"></span>   Create</button>

                </div>

                @Html.ActionLink("Back to Join", "GetUser", "Quizz")
            </div>
        }

    </div>
</div>
