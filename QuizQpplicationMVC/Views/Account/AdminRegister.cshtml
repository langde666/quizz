@model QuizQpplicationMVC.Models.AdminRegister

@{
    ViewBag.Title = "AdminRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            Welcome to |QUIZZ|, a website where you can study with |quizzs| in a variety of fields, or a place to relax with fun, interesting |quizzs|.<br />
            For convenience, read some of our tutorials first.
        </div>
    </div>
    <h3>You want to be one of us?</h3>
    <ul>
        <li>Thank for that!</li>
        <li>First, you need to provide some information for us.</li>
        <li>Finally is fighting for good, fun and interesting |quizzs|.</li>
    </ul>
</div>
<hr />

@if (ViewBag.msg0 != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong>
    </div>
}
else if (ViewBag.msg1 != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong>@ViewBag.msg1
    </div>
}
else if (ViewBag.msg2 != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong>@ViewBag.msg2
    </div>
}

<div class="panel panel-default" style="width: 37%; margin: 5% 32%;">
    <div class="panel-heading">Sign Up to be Admin ^_^</div>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="">
                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Full Name ...", @style = "width:100%; margin-left: 56px;" } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username ...", @style = "width:100%; margin-left: 56px;" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password ...", @style = "width:100%; margin-left: 56px;" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.PasswordFor(model => model.Confirm, new { @class = "form-control", @placeholder = "Confirm password ...", @style = "width:100%; margin-left: 56px;" })<br />
                        @Html.ValidationMessageFor(model => model.Confirm, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="">
                    <button type="submit" id="Enter" class="btn btn-info btn-lg" style="width:100%;"><span class="glyphicon glyphicon-pencil"></span>   Create</button>

                </div>

                @Html.ActionLink("Back to Login", "Login")
            </div>
        }

    </div>

</div>
